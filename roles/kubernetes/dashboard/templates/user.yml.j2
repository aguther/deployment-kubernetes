---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ kubernetes_dashboard_admin_username }}
  namespace: {{ kubernetes_dashboard_namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ kubernetes_dashboard_admin_username }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ kubernetes_dashboard_admin_username }}
  namespace: {{ kubernetes_dashboard_namespace }}
